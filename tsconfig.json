{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@constants/*": ["src/constants/*"],
			"@assets/*": ["assets/*"],
			"@providers/*": ["src/app/providers/*"],
			"@lib/*": ["src/lib/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
